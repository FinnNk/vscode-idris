{
	"name": "vscode-idris",
    "displayName": "idris Syntax Highlighting",
	"description": "Syntax highlighting and snippets for the idris programming language.",
	"version": "1.0.0",
    "publisher": "zjhmale",
	"engines": {
		"vscode": "^0.10.1"
	},
	"icon": "images/idris.png",
    "galleryBanner": {
        "color": "#00ff99",
        "theme": "light"
    },
    "keywords": [
        "language", "idris", "highlight", "syntax", "snippets"
    ],
    "license": "MIT",
    "homepage": "https://github.com/zjhmale/vscode-idris",
    "repository": {
        "type": "git",
        "url": "https://github.com/zjhmale/vscode-idris.git"
    },
    "bugs": {
        "url": "https://github.com/zjhmale/vscode-idris/issues",
        "email": "zjhmale@gmail.com"    
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
	"activationEvents": [
		"onLanguage:idris"
	],
	"main": "./out/src/extension",
	"contributes": {
        "languages": [{
            "id": "idris",
            "aliases": ["idris", "idris"],
            "extensions": [".idr"]
        }],
        "grammars": [{
            "language": "idris",
            "scopeName": "source.idris",
            "path": "./syntaxes/idris.tmLanguage"
        }]},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"devDependencies": {
		"typescript": "^1.6.2",
		"vscode": "0.10.x"
	}
}
